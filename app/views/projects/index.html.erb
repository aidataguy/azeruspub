<% content_for :title do %>Our Projects<% end %>
<section>
<div class="container projectview">
	<div class="center-align">
	<% @projects.each do |project| %>
		<h4><%= link_to project.name, project %></h4>
		<%=image_tag (project.preview_url(:medium)), class: "responsive-img" %>
		<p class="descriptions"> <%= project.description.html_safe %></p>
		<p class="chip"><%= project.url %></p>
	<% end %>
	<div class="divider"></div>
	</div>
</div>
</section>
