<div class="container pf">
	<div class="row">
		<div class="col s12 m12 l12">
			<h4 class="center-align">Add Your Project(s)</h4>
			<div class="container pr">
			<%= form_for @project, :html => {:multipart => true} do |f|%>
			<%= label_tag :"Title" %>
			<%= f.text_field :name %> <br>
			<%= label_tag :"URL" %>
			<%= f.text_field :url, placeholder: "http://yourdomain.com"  %> <br>
			<%= label_tag :"Add a nice photo!"  %>
			<%= f.file_field :preview  %> <br>
			<br>
			<%= f.text_area :description, placeholder: "post content goes here", :class => "ckeditor"%>
			<p class="center-align"><%= f.button(type: 'submit', :class => "btn waves-effect waves-red") do %>
			<i class="fa fa-send fa-2x left"></i>Submit
			<% end %>
			</p> 
			<% end %>
			</div>
		</div>
	</div>
</div>
